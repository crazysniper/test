<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toLinearLayout"
        android:text="@string/toLinearLayout" />

    <Button
        android:id="@+id/toRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toRelativeLayout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toTableLayout"
        android:text="@string/toTableLayout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toFrameLayout"
        android:text="@string/toFrameLayout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toShowToast"
        android:text="@string/showtoast" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toComponent"
        android:text="@string/toComponent" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="toActivity"
        android:text="Activity生命周期" />

</LinearLayout>